<form id="creaet-form" asp-controller="Purchase" asp-action="CreateWeightNote" method="post" autocomplete="off">
    <div class="row">
        <fieldset class="col-sm-12 the-fieldset">
            <legend class="scheduler-border">進貨客戶資訊</legend>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="form-control-label" for="ownername">進貨單號</label>
                        <p>
                            @Model.VE_PurchaseWeightNote.DocNo
                        </p>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="form-control-label" for="ownername">磅單時間</label>
                        <p>
                            @Model.VE_PurchaseWeightNote.FullWeightTime.ToString("yyyy-MM-dd HH:mm:ss")
                        </p>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="form-control-label" for="ownername">進貨對象</label>
                        <p>@Model.VE_PurchaseWeightNote.CustomerName</p>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="form-control-label" for="ownername">客戶車牌</label>
                        <p>@Model.VE_PurchaseWeightNote.CarNo</p>
                    </div>
                </div>
            </div>
        </fieldset>
        <!-- fieldset -->
        <fieldset class="form-group col-sm-12 the-fieldset">
            <legend class="scheduler-border">進貨資訊</legend>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="form-control-label">進廠重量(重車重-空車重):</label>
                        <p>@Model.VE_PurchaseWeightNote.FullWeight</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="form-control-label">扣重</label>
                        <p>@Model.VE_PurchaseWeightNote.DefectiveWeight</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="form-control-label">單價</label>
                        <p>@Model.VE_PurchaseWeightNote.UnitPrice</p>
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="form-group">
                        <h6 id="total"><span>無選擇項目</span></h6>
                        <input asp-for="SelectPurchaseDetailInfos" type="hidden" />
                        <span asp-validation-for="SelectPurchaseDetailInfos" class="text-danger"></span>
                        <select id="user-select-proditem" asp-items="@Model.ProductItemItems" class="select2bs4" multiple="multiple" style="width: 100%;">
                            @*<option value='11'>工一</option>
                                <option value='12'>工二</option>
                                <option value='13'>廢鐵</option>
                                <option value='14'>垃圾</option>*@
                            @*
                                <option value='{"name":"工4","value":"14"}'>垃圾</option>*@
                        </select>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <ul id="evenProductLs">
                            </ul>
                        </div>
                        <div class="form-group col-sm-6">
                            <ul id="oddProductLs">
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </fieldset>
        <fieldset class="form-group col-sm-12 the-fieldset">
            <legend class="scheduler-border">合約資訊</legend>
            <div class="form-group">

            </div>
        </fieldset>
        <fieldset class="form-group col-sm-12 the-fieldset">
            <legend class="scheduler-border">金額計算</legend>
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="form-control-label">是否含稅</label>
                        <br />
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input asp-for="VE_PurchaseWeightNote.HasTax" type="radio" class="form-check-input ishas_tax" value="@true" id="IsHasText_1" onclick="return false;">是
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input asp-for="VE_PurchaseWeightNote.HasTax" type="radio" class="form-check-input ishas_tax" value="@false" id="IsHasText_2" onclick="return false;">否
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label>磅秤類型</label>
                        <br>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input asp-for="VE_PurchaseWeightNote.ScaleNo" id="ScaleNo1" type="radio" class="form-check-input" value="1" onclick="return false;">大磅
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input asp-for="VE_PurchaseWeightNote.ScaleNo" id="ScaleNo2" type="radio" value="2" class="form-check-input" onclick="return false;">小磅
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="form-control-label">運費單價</label>
                        <p>@Model.VE_PurchaseWeightNote.TraficUnitPrice</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="form-control-label">磅費</label>
                        <p>@Model.VE_PurchaseWeightNote.ThirdWeightFee</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="form-control-label">計價金額 = (進廠重量 - 扣重) * 單價 * 稅率</label>
                        <p>@Model.VE_PurchaseWeightNote.WeightPrice</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="form-control-label">運費 = 進廠重量 * 運費單價</label>
                        <p>@Model.VE_PurchaseWeightNote.DeliveryFee</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label style="color:blue">實付金額 = (磅費 + 計價金額 + 運費)</label>
                        <h1 style="color:red" id="show_final_price"></h1>
                        <p>@Model.VE_PurchaseWeightNote.ActualPrice</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label style="color:blue">付款方式</label>
                        <p>@Model.PayTypeItems.FirstOrDefault(aa => aa.Value == Model.VE_PurchaseWeightNote.PayType).Text</p>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label style="color:blue">付款日</label>
                        <p>
                            @Model.VE_PurchaseWeightNote.PayTime?.ToString("yyyy-MM-dd HH:mm:ss")
                        </p>
                    </div>
                </div>
            </div>

        </fieldset>
        <fieldset class="form-group col-sm-12 the-fieldset">
            <legend class="scheduler-border">備註</legend>
            <div class="form-group col-12">
                @*<label class="form-control-label" for="reasonforvisit">備註</label>*@
                <textarea asp-for="VE_PurchaseWeightNote.Remark" class="form-control" rows="3"></textarea>
            </div>
        </fieldset>


        <!-- form-group -->
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
    <button id="testbt" class="btn btn-primary" type="button">Test</button>
    <div id="testPost">

    </div>
    <div id="dialog-confirm" title="Empty the recycle bin?">
        <p><span class="ui-icon ui-icon-alert" style="float:left; margin:12px 12px 20px 0;"></span>These items will be permanently deleted and cannot be recovered. Are you sure?</p>
    </div>
</form>



